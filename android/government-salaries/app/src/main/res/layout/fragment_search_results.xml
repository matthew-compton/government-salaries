<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_search_results_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_search_results_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/padding_medium"
        />

    <com.ambergleam.android.governmentsalaries.controller.fastscroller.vertical.VerticalRecyclerViewFastScroller
        android:id="@+id/fragment_search_results_fast_scroller"
        android:layout_width="@dimen/padding_medium"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:barColor="@color/accent"
        app:handleBackground="@drawable/rounded_scroller_handle"
        />

    <com.ambergleam.android.governmentsalaries.controller.EmployeeSectionTitleIndicator
        android:id="@+id/fragment_search_results_fast_scroller_section_title_popup"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fast_scroller_indicatorHeight"
        android:layout_toLeftOf="@id/fragment_search_results_fast_scroller"
        android:layout_toStartOf="@id/fragment_search_results_fast_scroller"
        app:backgroundColor="@color/primary_light"
        app:textColor="@color/primary_dark"
        />

    <TextView
        android:id="@+id/fragment_search_results_emptyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        />

</RelativeLayout>